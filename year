package bootcamp;

import java.util.Scanner;

public class Calendar {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//importing scanner for the input operations
		Scanner in = new Scanner(System.in);

		System.out.print("Enter Number of days :");
		
		// Taking number of days
		int days=in.nextInt(); 

		//dividing number of days to years
		int year=days/365;  


		 // dividing to weeks
		int week=(days%365)/7; 


		 // calculating remaining days 
		int rem_days=((days%365)%7); 
		
		System.out.println("Number of Years:"+year+"\nNumber of Weeks:"+week+"\nNumber of days :" +rem_days);
		in.close();
	}

	

}
